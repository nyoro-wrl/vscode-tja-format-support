{
  "scopeName": "source.tja",
  "patterns": [
    {
      "include": "#comment"
    },
    {
      "include": "#header"
    },
    {
      "include": "#chartTmg"
    },
    {
      "include": "#chart"
    },
    {
      "include": "#commandBranchTmg"
    },
    {
      "include": "#commandBranch"
    },
    {
      "include": "#commandTmg"
    },
    {
      "include": "#command"
    }
  ],
  "repository": {
    "comment": {
      "name": "comment",
      "match": "//.*$"
    },
    "header": {
      "begin": "^\\s*([A-Z0-9]+):\\s*",
      "end": "$",
      "beginCaptures": {
        "1": {
          "name": "header.name"
        }
      },
      "patterns": [
        {
          "include": "#comment"
        },
        {
          "name": "header.parameter.prefix",
          "match": "(?<=^\\s*SUBTITLE:\\s*)(\\+\\+|--)"
        },
        {
          "name": "header.parameter",
          "begin": "\\G",
          "end": "(?=(\\s*//|\\s*$))"
        }
      ]
    },
    "chart": {
      "begin": "(?=^\\s*#START\\s)",
      "end": "(?=^\\s*#END\\s)",
      "patterns": [
        {
          "include": "#comment"
        },
        {
          "include": "#commandBranchTmg"
        },
        {
          "include": "#commandBranch"
        },
        {
          "include": "#commandTmg"
        },
        {
          "include": "#command"
        },
        {
          "include": "#measure"
        }
      ]
    },
    "chartTmg": {
      "begin": "(?=^\\s*#START\\(.*\\))",
      "end": "(?=^\\s*#END\\(.*\\))",
      "patterns": [
        {
          "include": "#comment"
        },
        {
          "include": "#commandBranchTmg"
        },
        {
          "include": "#commandBranch"
        },
        {
          "include": "#commandTmg"
        },
        {
          "include": "#command"
        },
        {
          "include": "#measure"
        }
      ]
    },
    "command": {
      "begin": "^\\s*(#[A-Z0-9]+)\\s+",
      "end": "$",
      "beginCaptures": {
        "1": {
          "name": "command.name"
        }
      },
      "patterns": [
        {
          "include": "#comment"
        },
        {
          "name": "command.parameter",
          "begin": "\\G",
          "end": "(?=(\\s*//|\\s*$))",
          "patterns": [
            {
              "name": "command.delimiter",
              "match": ","
            }
          ]
        }
      ]
    },
    "commandTmg": {
      "begin": "^\\s*(#[A-Z0-9]+)\\(",
      "end": "\\)",
      "beginCaptures": {
        "1": {
          "name": "command.name"
        }
      },
      "patterns": [
        {
          "include": "#comment"
        },
        {
          "name": "command.parameter",
          "begin": "\\G",
          "end": "(?=(\\)\\s*//|\\)\\s*$))",
          "patterns": [
            {
              "name": "command.delimiter",
              "match": ","
            }
          ]
        }
      ]
    },
    "commandBranch": {
      "begin": "^\\s*(#(BRANCHSTART|N|E|M|BRANCHEND))\\s+",
      "end": "$",
      "beginCaptures": {
        "1": {
          "name": "command.name.branch"
        }
      },
      "patterns": [
        {
          "include": "#comment"
        },
        {
          "name": "command.parameter.branch",
          "begin": "\\G",
          "end": "(?=(\\s*//|\\s*$))",
          "patterns": [
            {
              "name": "command.delimiter.branch",
              "match": ","
            }
          ]
        }
      ]
    },
    "commandBranchTmg": {
      "begin": "^\\s*(#(BRANCHSTART|N|E|M|BRANCHEND))\\(",
      "end": "\\)",
      "beginCaptures": {
        "1": {
          "name": "command.name.branch"
        }
      },
      "patterns": [
        {
          "include": "#comment"
        },
        {
          "name": "command.parameter.branch",
          "begin": "\\G",
          "end": "(?=(\\)\\s*//|\\)\\s*$))",
          "patterns": [
            {
              "name": "command.delimiter.branch",
              "match": ","
            }
          ]
        }
      ]
    },
    "measure": {
      "name": "measure",
      "begin": "(?=^\\s*[0-9A-Z,])",
      "end": "((,)|$|(?=^\\s*#(END|BRANCHSTART|N|E|M|BRANCHEND)\\s))",
      "endCaptures": {
        "2": {
          "name": "measureEnd"
        }
      },
      "patterns": [
        {
          "include": "#comment"
        },
        {
          "include": "#inChartHeader"
        },
        {
          "include": "#notes"
        }
      ]
    },
    "notes": {
      "patterns": [
        {
          "name": "note.empty",
          "match": "0"
        },
        {
          "name": "note.don",
          "match": "1"
        },
        {
          "name": "note.ka",
          "match": "2"
        },
        {
          "name": "note.don.big",
          "match": "3"
        },
        {
          "name": "note.ka.big",
          "match": "4"
        },
        {
          "name": "note.don.big.hand",
          "match": "A"
        },
        {
          "name": "note.ka.big.hand",
          "match": "B"
        },
        {
          "name": "note.bomb",
          "match": "C"
        },
        {
          "name": "note.adlib",
          "match": "F"
        },
        {
          "name": "note.kadon.big",
          "match": "G"
        },
        {
          "include": "#roll"
        },
        {
          "include": "#rollBig"
        },
        {
          "include": "#balloon"
        },
        {
          "include": "#balloonBig"
        },
        {
          "include": "#fuze"
        },
        {
          "name": "note.end",
          "match": "8"
        }
      ]
    },
    "roll": {
      "name": "noteRange.roll",
      "begin": "(5)(0*)(,?)",
      "end": "(8|(?=[1-79A-Z])|(?=^\\s*#(END|BRANCHSTART|N|E|M|BRANCHEND)\\s))",
      "beginCaptures": {
        "1": { "name": "note.start" },
        "2": { "name": "note.empty" },
        "3": { "name": "measureEnd" }
      },
      "endCaptures": {
        "0": { "name": "note.end" }
      },
      "patterns": [
        {
          "include": "#comment"
        },
        {
          "include": "#commandBranchTmg"
        },
        {
          "include": "#commandBranch"
        },
        {
          "include": "#commandTmg"
        },
        {
          "include": "#command"
        },
        {
          "include": "#rollMeasure"
        }
      ]
    },
    "rollBig": {
      "name": "noteRange.roll.big",
      "begin": "(6)(0*)(,?)",
      "end": "(8|(?=[1-79A-Z])|(?=^\\s*#(END|BRANCHSTART|N|E|M|BRANCHEND)\\s))",
      "beginCaptures": {
        "1": { "name": "note.start" },
        "2": { "name": "note.empty" },
        "3": { "name": "measureEnd" }
      },
      "endCaptures": {
        "0": { "name": "note.end" }
      },
      "patterns": [
        {
          "include": "#comment"
        },
        {
          "include": "#commandBranchTmg"
        },
        {
          "include": "#commandBranch"
        },
        {
          "include": "#commandTmg"
        },
        {
          "include": "#command"
        },
        {
          "include": "#rollMeasure"
        }
      ]
    },
    "balloon": {
      "name": "noteRange.balloon",
      "begin": "(7)(0*)(,?)",
      "end": "(8|(?=[1-79A-Z])|(?=^\\s*#(END|BRANCHSTART|N|E|M|BRANCHEND)\\s))",
      "beginCaptures": {
        "1": { "name": "note.start" },
        "2": { "name": "note.empty" },
        "3": { "name": "measureEnd" }
      },
      "endCaptures": {
        "0": { "name": "note.end" }
      },
      "patterns": [
        {
          "include": "#comment"
        },
        {
          "include": "#commandBranchTmg"
        },
        {
          "include": "#commandBranch"
        },
        {
          "include": "#commandTmg"
        },
        {
          "include": "#command"
        },
        {
          "include": "#rollMeasure"
        }
      ]
    },
    "balloonBig": {
      "name": "noteRange.balloon.big",
      "begin": "(9)(0*)(,?)",
      "end": "(8|(?=[1-79A-Z])|(?=^\\s*#(END|BRANCHSTART|N|E|M|BRANCHEND)\\s))",
      "beginCaptures": {
        "1": { "name": "note.start" },
        "2": { "name": "note.empty" },
        "3": { "name": "measureEnd" }
      },
      "endCaptures": {
        "0": { "name": "note.end" }
      },
      "patterns": [
        {
          "include": "#comment"
        },
        {
          "include": "#commandBranchTmg"
        },
        {
          "include": "#commandBranch"
        },
        {
          "include": "#commandTmg"
        },
        {
          "include": "#command"
        },
        {
          "include": "#rollMeasure"
        }
      ]
    },
    "fuze": {
      "name": "noteRange.fuze",
      "begin": "(D)(0*)(,?)",
      "end": "(8|(?=[1-79A-Z])|(?=^\\s*#(END|BRANCHSTART|N|E|M|BRANCHEND)\\s))",
      "beginCaptures": {
        "1": { "name": "note.start" },
        "2": { "name": "note.empty" },
        "3": { "name": "measureEnd" }
      },
      "endCaptures": {
        "0": { "name": "note.end" }
      },
      "patterns": [
        {
          "include": "#comment"
        },
        {
          "include": "#commandBranchTmg"
        },
        {
          "include": "#commandBranch"
        },
        {
          "include": "#commandTmg"
        },
        {
          "include": "#command"
        },
        {
          "include": "#rollMeasure"
        }
      ]
    },
    "rollMeasure": {
      "begin": "(?=^\\s*[0,])",
      "end": "((,)|$|(?=[1-9A-Z]))",
      "endCaptures": {
        "2": {
          "name": "measureEnd"
        }
      },
      "patterns": [
        {
          "include": "#comment"
        },
        {
          "name": "note.empty",
          "match": "0"
        }
      ]
    },
    "inChartHeader": {
      "begin": "^\\s*([A-Z0-9]+):\\s*",
      "end": "$",
      "beginCaptures": {
        "1": {
          "name": "header.name"
        }
      },
      "patterns": [
        {
          "include": "#comment"
        },
        {
          "name": "header.parameter",
          "match": ".*"
        }
      ]
    }
  }
}
