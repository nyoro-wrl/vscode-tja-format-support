{
  "name": "tja-format-support",
  "displayName": "TJA Format Support",
  "description": "Taiko Jiro Format Support Extension",
  "version": "1.1.3",
  "publisher": "nyoro",
  "license": "MIT",
  "icon": "images/icon.png",
  "engines": {
    "vscode": "^1.74.0"
  },
  "keywords": [
    "tja",
    "tjc",
    "tjf",
    "highlight",
    "snippets"
  ],
  "categories": [
    "Programming Languages",
    "Snippets"
  ],
  "activationEvents": [
    "onLanguage:tja"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "tja",
        "aliases": [
          "TJA",
          "tja"
        ],
        "extensions": [
          ".tja",
          ".tjc",
          ".tjf"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "tja",
        "scopeName": "source.tja",
        "path": "./syntaxes/tja.tmLanguage.json"
      }
    ],
    "configurationDefaults": {
      "[tja]": {
        "files.encoding": "shiftjis",
        "editor.unicodeHighlight.ambiguousCharacters": false,
        "editor.snippetSuggestions": "top",
        "editor.unicodeHighlight.invisibleCharacters": false,
        "editor.suggest.showUsers": false
      },
      "editor.tokenColorCustomizations": {
        "textMateRules": [
          {
            "scope": "source.tja header",
            "settings": {
              "foreground": "#569cd6"
            }
          },
          {
            "scope": "source.tja header.prefix",
            "settings": {
              "foreground": "#888"
            }
          },
          {
            "scope": "source.tja header.variable",
            "settings": {
              "foreground": "#9cdcfe"
            }
          },
          {
            "scope": "source.tja statement",
            "settings": {
              "foreground": "#cd86c7"
            }
          },
          {
            "scope": "source.tja statement.branch",
            "settings": {
              "foreground": "#ce9178"
            }
          },
          {
            "scope": "source.tja statement.variable",
            "settings": {
              "foreground": "#ffc3ff"
            }
          },
          {
            "scope": "source.tja note.don",
            "settings": {
              "foreground": "#e96d46"
            }
          },
          {
            "scope": "source.tja note.don.big",
            "settings": {
              "foreground": "#e95020",
              "fontStyle": "bold"
            }
          },
          {
            "scope": "source.tja note.ka",
            "settings": {
              "foreground": "#77c4c1"
            }
          },
          {
            "scope": "source.tja note.ka.big",
            "settings": {
              "foreground": "#00acbd",
              "fontStyle": "bold"
            }
          },
          {
            "scope": "source.tja note.roll",
            "settings": {
              "foreground": "#f3c02c"
            }
          },
          {
            "scope": "source.tja note.roll.big",
            "settings": {
              "foreground": "#f8b200",
              "fontStyle": "bold"
            }
          },
          {
            "scope": "source.tja note.balloon",
            "settings": {
              "foreground": "#e4853b"
            }
          },
          {
            "scope": "source.tja note.balloon.big",
            "settings": {
              "foreground": "#ff8400",
              "fontStyle": "bold"
            }
          },
          {
            "scope": "source.tja note.empty",
            "settings": {
              "foreground": "#404040"
            }
          }
        ]
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/glob": "^8.0.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "eslint": "^8.28.0",
    "glob": "^8.0.3",
    "mocha": "^10.1.0",
    "typescript": "^4.9.3",
    "@vscode/test-electron": "^2.2.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/nyoro-wrl/vscode-tja-format-support"
  }
}
